@model IEnumerable<LoomCrm_Hospital.Models.Appointment>
@{ViewBag.Title = "EditAppointmentList";}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Randevu Listesi</h3>

                <div class="box-tools" style="display:none;">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <th>Şube</th>
                            <th>Poliklinik</th>
                            <th>Doktor</th>
                            <th>Hasta</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.appointmentId</td>
                                <td>@item.Doctor.Department.Office.name</td>
                                <td>@item.Doctor.Department.name</td>
                                <td>@item.Doctor.name @item.Doctor.SurName</td>
                                <td>@item.Patient.Name @item.Patient.surName</td>
                                <td>@item.appointmentStartDate.ToShortDateString()</td>
                                <td>@item.appointmentStartDate.ToShortTimeString()</td>
                                <td>@Html.ActionLink("Düzenle","EditAppointmentListOnce","Appointment",new {appId=item.appointmentId, oldDoctorId = ViewBag.oldDoctorId, startDate = ViewBag.startDate, finishDate= ViewBag.finishDate },new {@class="btn btn-warning btn-block"})</td>
                            </tr>
                        }
                        
                        
                        
                        
                       
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>