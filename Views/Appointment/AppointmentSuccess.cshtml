@model LoomCrm_Hospital.Models.Appointment
@{
    ViewBag.Title = "Randevu Onaylandı";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <i class="fa fa-calendar-check-o"></i>

                <h3 class="box-title">Randevunuz Onaylanmıştır.</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <p>@Model.appointmentStartDate tarihli</p>
                <p>@Model.Doctor.name @Model.Doctor.SurName doktorumuza aldığınız randevunuz <span style="font-weight:bold;color:lightgreen">onaylanmıştır.</span></p>
                <p>Teşekkür ederiz.</p>
                @Html.ActionLink("AnaSayfa", "PatientPage", "Home", null, new { @class = "btn btn-block btn-success" })
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
