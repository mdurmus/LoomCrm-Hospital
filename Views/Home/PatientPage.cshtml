@model IEnumerable<LoomCrm_Hospital.Models.Appointment>
@{ViewBag.Title = "PatientPage";}

<div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="fa fa-plus"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Toplam Alınan Randevu</span>
                <span class="info-box-number">@ViewBag.appointmentTotalCount</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-calendar-check-o"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Onaylanan</span>
                <span class="info-box-number">999</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-heartbeat"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Ortalama Nabız</span>
                <span class="info-box-number">999</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-red"><i class="fa fa-user-md"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Son Muayene</span>
                <span class="info-box-number">@ViewBag.lastDoctor</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Son Randevularınız</h3>

                <div class="box-tools" style="display:none;">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Şube</th>
                            <th>Poliklinik</th>
                            <th>Doktor</th>
                            <th>Tarihi</th>
                            <th>Saati</th>
                        </tr>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Doctor.Department.Office.name</td>
                                    <td>@item.Doctor.Department.name</td>
                                    <td>@item.Doctor.name @item.Doctor.SurName</td>
                                    <td><span class="label label-success">@item.appointmentStartDate.ToShortDateString()</span></td>
                                    <td><span class="label label-warning">@item.appointmentStartDate.ToShortTimeString()</span></td>
                                </tr>

                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5"><p>Randevu kaydınız bulunmamaktadır.</p></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>