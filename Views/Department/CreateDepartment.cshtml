@model LoomCrm_Hospital.Models.Department
@{ViewBag.Title = "Poliklinik Ekle";}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Yeni Poliklinik Ekle</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("CreateDepartment", "Department", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.name, null, new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.name, "", new { @class = "form-control col-md-10" })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.medicalExamDuration, "Muayene Süresi (dak.)", new { @class = "control-label col-md-2" })
                        <input type="number" value="0" , min=0 name="medicalExamDuration" />
                        @Html.ValidationMessageFor(model => model.medicalExamDuration, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Şube", null, new { @class = "control-label col-md-2" })
                        @Html.DropDownList("officeId", ViewBag.Department as SelectList, new { @class = "form-control col-md-10" })
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @if (ViewBag.Message != null)
                    {
                        <div class="callout callout-warning">
                            <h4>Dikkat!</h4>
                            <p>
                                Eklemeye çalıştığınız poliklinik bu şubede zaten eklenmiş durumda. Poliklinik listeleme ekranından aktif/pasif durumunu kontrol edebilirsiniz.
                            </p>
                        </div>
                    }
                    <button type="submit" class="btn btn-primary btn-block">Ekle</button>
                </div>
            }

        </div>
    </div>
</div>