@model LoomCrm_Hospital.Models.Office
@{ViewBag.Title = "Şube Düzenle";}

@if (ViewBag.Message != null)
{
    <p style="font-weight:bold;font-size:24px;color:red;">@ViewBag.Message</p>
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Horizontal Form</h3>
            </div>
            <div class="form-horizontal">
                <div class="box-body">
                    @using (Html.BeginForm("EditOffice", "Office", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.mapsUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.mapsUrl, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mapsUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Şube Görseli</label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <span class="input-group-addon pull-left">
                                        <img src="@Url.Content(Model.officePicturePath)" style="width:250px;" />
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="officePicture" class="control-label col-md-2">Yeni Görsel Seçin</label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <input type="file" name="officePicture" id="officePicture">

                                    <p class="help-block">Değiştirmek istediğiniz resmi seçin</p>
                                </div>
                            </div>
                        </div>

                            <div class="box-footer">
                                <input type="hidden" value="@Model.officeId" name="officeId" />
                                <button type="submit" class="btn btn-info">Kaydet</button>
                                <a href="@Url.Action("GetOfficeList", "Office")" class="btn btn-default">Geri Dön</a>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>