@model LoomCrm_Hospital.Models.Office
@{    ViewBag.Title = "Şube Ekle";}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Yeni Şube Ekle</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("CreateOffice", "Office", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group has-feedback">
                        <label for="name">Şube Adı</label>
                        <input type="text" class="form-control" name="name" placeholder="Şube Adını Giriniz">
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group has-feedback">
                        <label for="mapsUrl">Maps Adresi</label>
                        <input type="url" class="form-control" name="mapsUrl" placeholder="Maps Adresini Giriniz.">
                    </div>

                    <div class="form-group">
                        <label for="officePicture">Şube Görseli</label>
                        <input type="file" name="officePicture">
                        <p class="help-block">Şubenizin görüntülenecek görseli.</p>
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Kaydet">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
