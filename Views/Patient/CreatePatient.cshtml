@model LoomCrm_Hospital.Models.Patient
@{ViewBag.Title = "Hasta Ekle";}
@if (ViewBag.Message != null)
{
    <div class="col-md-12">
        <div class="callout callout-danger">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
}


<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Yeni Hasta Ekle</h3>
            </div>
            @using (Html.BeginForm("CreatePatient", "Patient", FormMethod.Post,new { enctype = "multipart/form-data" }))
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(p => p.IdentityNo, new { @class = "control-label" })
                        <input type="text" name="IdentityNo" class="form-control" min="11" max="11" />
                        @Html.ValidationMessageFor(p => p.IdentityNo, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Name, new { @class = "control-label" })
                        <input type="text" name="Name" class="form-control" />
                        @Html.ValidationMessageFor(p => p.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Hasta Soyismi</label>
                        <input type="tel" name="surName" class="form-control" />
                        @Html.ValidationMessageFor(p => p.surName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Doğum Tarihi</label>
                        <input type="date" name="birthDate" class="form-control" />
                        @Html.ValidationMessageFor(p => p.birthDate, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.gsmNumber, new { @class = "control-label" })
                        <input type="text" name="gsmNumber" class="form-control" />
                        @Html.ValidationMessageFor(p => p.gsmNumber, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.EmailAddress, new { @class = "control-label" })
                        <input type="email" name="EmailAddress" class="form-control" />
                        @Html.ValidationMessageFor(p => p.EmailAddress, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.password, new { @class = "control-label" })
                        <input type="text" name="password" class="form-control" />
                        @Html.ValidationMessageFor(p => p.password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cinsiyet</label><br />
                        <label>
                            <input name="famale" type="radio" value="true" checked="checked">
                            <b style="font-weight:bold;">Bayan</b>
                        </label><br />
                        <label>
                            <input name="famale" type="radio" value="false">
                            <b style="font-weight:bold;">Bay</b>
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Hasta Resmi</label>
                        <input type="file" name="photoFile" class="form-control" />
                     </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>