@model LoomCrm_Hospital.Models.Patient
@{ViewBag.Title = "Hasta Düzenle";}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Kayıtlı Bilgileriniz</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("EditPatient", "Patient", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(p => p.patientId)
                    <div class="form-group">
                        <label class="control-label">Tc Kimlik Numarası</label>
                        <input type="text" name="IdentityNo" value="@Model.IdentityNo" class="form-control" readonly="readonly" />
                        @Html.ValidationMessageFor(p => p.IdentityNo, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Name, new { @class = "control-label" })

                        <input type="text" name="Name" value="@Model.Name" class="form-control" />
                        @Html.ValidationMessageFor(p => p.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.surName, new { @class = "control-label" })
                        <input type="tel" name="surName" value="@Model.surName" class="form-control" />
                        @Html.ValidationMessageFor(p => p.surName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.gsmNumber, new { @class = "control-label" })
                        <input type="text" name="gsmNumber" class="form-control" value="@Model.gsmNumber" />
                        @Html.ValidationMessageFor(p => p.gsmNumber, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.EmailAddress, new { @class = "control-label" })
                        <input type="email" name="EmailAddress" value="@Model.EmailAddress" class="form-control" />
                        @Html.ValidationMessageFor(p => p.EmailAddress, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.birthDate, new { @class = "control-label" })
                        @Html.EditorFor(p => p.birthDate, new { htmlAttributes = new { @class = "form-control", tabindex = "5" } })
                        @Html.ValidationMessageFor(p => p.password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.password, new { @class = "control-label" })
                        <input type="text" name="password" class="form-control" value="@Model.password" />
                        @Html.ValidationMessageFor(p => p.password, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cinsiyet</label><br />
                        @if (Model.isFemale == true)
                        {
                            <label>
                                <input name="isFemale" type="radio" value="true" checked="checked">
                                <b style="font-weight:bold;">Bayan</b>
                            </label><br />
                            <label>
                                <input name="isFemale" type="radio" value="false">
                                <b style="font-weight:bold;">Bay</b>
                            </label>
                        }
                        else
                        {
                            <label>
                                <input name="isFemale" type="radio" value="true">
                                <b style="font-weight:bold;">Bayan</b>
                            </label><br />
                            <label>
                                <input name="isFemale" type="radio" value="false" checked="checked">
                                <b style="font-weight:bold;">Bay</b>
                            </label>
                        }

                    </div>
                    <div class="form-group">
                        <label>Profil Fotoğrafı</label>
                        <input type="file" name="photoFile" class="form-control" />
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary btn-block">Güncelle ve Listeye Dön</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Profil Fotoğrafı</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.photoFile != null)
                        {
                            <img class="img-responsive" style="margin: 0 auto;width:350px;height:auto;" src="@Url.Content(Model.photoFile)" />
                        }
                        else
                        {
                            <img class="img-responsive" style="margin: 0 auto;width:350px;height:auto;" src="~/Images/avatar.png" />
                        }
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>