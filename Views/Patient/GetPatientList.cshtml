@model IEnumerable<LoomCrm_Hospital.Models.Patient>
@{
    ViewBag.Title = "Kayıtlı Hasta Listesi";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Kayıtlı Hastalarımız</h3>

                <div class="box-tools">
                    @Html.ActionLink("Yeni Hasta Ekle", "CreatePatient", "Patient", null, new { @class = "btn btn-info pull-right" })
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Kimlik No</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Gsm</th>
                            <th>Email</th>
                            <th>İşlemler</th>
                        </tr>
                       @if (Model.Count() > 0)
                       {
                           foreach (var item in Model)
                           {
                            <tr>
                                <td>@item.IdentityNo</td>
                                <td>@item.Name</td>
                                <td>@item.surName</td>
                                <td><a href="tel:@item.gsmNumber">@item.gsmNumber</a></td>
                                <td><a href="mailto:@item.EmailAddress">@item.EmailAddress</a></td>
                                <td>
                                    @Html.ActionLink("Düzenle", "EditPatient", "Patient", new { patientId = item.patientId }, new { @class = "btn btn-warning" })
                                    @if (item.isActive == true)
                                    {
                                        @Html.ActionLink("Pasif Et", "PatientStatus", "Patient", new { patientId = item.patientId }, new { @class = "btn btn-danger" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Aktif Et", "PatientStatus", "Patient", new { patientId = item.patientId }, new { @class = "btn btn-success" })
                                    }
                                    
                                </td>
                            </tr>
                           }
                       }
                       else
                       {
                           <tr>
                               <td colspan="5"><p>Henüz bir hasta kaydı bulunmamaktadır.</p></td>
                           </tr>
                       }



                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>