@model IEnumerable<LoomCrm_Hospital.Models.Appointment>
@{ViewBag.Title = "Şube Poliklinik Sorgusu";}
<div class="box box-default" id="reportHeader">
    <div class="box-header with-border">
        <h3 class="box-title">Şube - Poliklinik Raporu</h3>
        <button id="btnPrint" class="btn btn-info pull-right" onclick="window.print()"><i class="fa fa-print"></i> Yazdır</button>
    </div>
    @using (Html.BeginForm("GetOfficeDepartmentReport", "Reports", FormMethod.Post,new { @novalidate = "novalidate" }))
    {
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-2">Şube</label>
                        @Html.DropDownList("officeId", ViewBag.officeId as SelectList, new { @class = "form-control col-md-10", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Başlangıç Tarihi</label>
                        <input type="date" class="form-control col-md-10" name="start" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Birimi", null, new { @class = "control-label col-md-2" })
                        @Html.DropDownList("departmentId", new SelectList(string.Empty, "Value", "Text"), new { @class = "form-control col-md-10" })
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Bitiş Tarihi</label>
                        <input type="date" class="form-control col-md-10" name="finish" />
                    </div>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    <!-- /.box-body -->
        <div class="box-footer">
            <input type="submit" id="btnRaporla" class="btn btn-block btn-warning" value="Raporla" />
        </div>
    }
</div>

@if (Model == null || Model.Count() < 1)
{
   <p>Lütfen formu doldurunuz.</p>
}
else if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Poliklinik Raporu</h3>

                    <div class="box-tools" style="display:none;">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Şube</th>
                                <th>Poliklinik</th>
                                <th>Hasta</th>
                                <th>Doktor</th>
                                <th>Randevu Tarihi</th>
                                <th>Randevu Saati</th>
                                <th>Kullanıcı Onayı</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Doctor.Department.Office.name</td>
                                <td>@item.Doctor.Department.name</td>
                                <td>@item.Patient.Name @item.Patient.surName</td>
                                <td>@item.Doctor.name @item.Patient.surName</td>
                                <td>@item.appointmentStartDate.ToShortDateString()</td>
                                <td>@item.appointmentStartDate.ToShortTimeString()</td>
                                <td>
                                    @if (item.userApprove == true)
                                        {
                                        <span class="label label-success">Onaylandı</span>
                                        }
                                        else
                                        {
                                        <span class="label label-danger">Onaylanmadı</span>
                                        }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

}





@section GetDepartment{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnRaporla").click(function (e) {
                var office = $('select#officeId option:selected').val();
                if (office == 0) {
                    alert("Lütfen şube ve poliklinik seçiniz.");
                    e.preventDefault();
                }
            })


            $("#officeId").change(function () {
                $("#departmentId").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetDepartment", "Doctor")',
                    dataType: 'JSON',
                    data: { officeId: $("#officeId").val() },
                    success: function (departments) {
                        $.each(departments, function (i, departments) {
                            $("#departmentId").append('<option value="' + departments.Value + '">' + departments.Text + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Departmanlar çekilemedi.' + ex);
                    }
                });
                return false;
            })
        });
    </script>
}