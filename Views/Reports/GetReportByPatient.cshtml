@model IEnumerable<LoomCrm_Hospital.Models.Appointment>
@{ViewBag.Title = "Hasta Raporu";}

<div class="box box-default" id="reportHeader">
    <div class="box-header with-border">
        <h3 class="box-title">Şube - Poliklinik Raporu</h3>
        <button id="btnPrint" class="btn btn-info pull-right" onclick="window.print()"><i class="fa fa-print"></i> Yazdır</button>
    </div>
    @using (Html.BeginForm("GetReportByPatient", "Reports", FormMethod.Post, new { @class = "form-inline", @novalidate = "novalidate" }))
    {
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group col-md-4">
                        <label class="control-label col-md-2">TC No</label>
                        <input type="text" id="tcIdNumber" name="tcIdNumber" maxlength="11" class="form-control col-md-10" />
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label col-md-2">Başlangıç Tarihi</label>
                        <input type="date" class="form-control col-md-10" name="start" />
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label col-md-2">Bitiş Tarihi</label>
                        <input type="date" class="form-control col-md-10" name="finish" />
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <input type="submit" id="btnRaporla" class="btn btn-block btn-warning" value="Raporla" />
        </div>
    }
</div>


@if (Model == null || Model.Count() < 1)
{
    <p>Lütfen formu doldurunuz.</p>
}
else if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Poliklinik Raporu</h3>

                    <div class="box-tools" style="display:none;">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Şube</th>
                                <th>Poliklinik</th>
                                <th>Hasta</th>
                                <th>Doktor</th>
                                <th>Randevu Tarihi</th>
                                <th>Randevu Saati</th>
                                <th>Kullanıcı Onayı</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Doctor.Department.Office.name</td>
                                    <td>@item.Doctor.Department.name</td>
                                    <td>@item.Patient.Name @item.Patient.surName</td>
                                    <td>@item.Doctor.name @item.Patient.surName</td>
                                    <td>@item.appointmentStartDate.ToShortDateString()</td>
                                    <td>@item.appointmentStartDate.ToShortTimeString()</td>
                                    <td>
                                        @if (item.userApprove == true)
                                        {
                                            <span class="label label-success">Onaylandı</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Onaylanmadı</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
}

@section PatientForm{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnRaporla").click(function (e) {
                if ($("#tcIdNumber").val().length < 11) {
                    e.preventDefault();
                    alert("Lütfen TC numarasını kontrol ediniz.");
                } else {
                        
                }
            });

        })

        $("#tcIdNumber").keydown(function (e) {
            // Allow: backspace, delete, tab, escape, enter and .
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                // Allow: Ctrl+A, Command+A
                (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                // Allow: home, end, left, right, down, up
                (e.keyCode >= 35 && e.keyCode <= 40)) {
                // let it happen, don't do anything
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
    </script>
}