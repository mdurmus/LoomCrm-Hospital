@model IEnumerable<LoomCrm_Hospital.Models.Doctor>
@{ViewBag.Title = "Doktor Listesi";}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Doktor Listesi</h3>

                <div class="box-tools">
                    @Html.ActionLink("Yeni Doktor", "CreateDoctor", "Doctor", null, new { @class = "btn btn-info pull-right" })
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Kimlik No</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Uzmanlığı</th>
                            <th>Şubesi</th>
                            <th>Birimi</th>
                            <th>GSM</th>
                            <th>Email</th>
                            <th>Aktif Mi</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TCIdentityNumber</td>
                                <td>@item.name</td>
                                <td>@item.SurName</td>
                                <td>@item.Professional.Name</td>
                                <td>@item.Department.Office.name</td>
                                <td>@item.Department.name</td>
                                <td>@item.gsmNumber</td>
                                <td>@item.doctorMailAddress</td>
                                <td>
                                    @if (item.isActive == true)
                                    {
                                    <span class="label label-success">Aktif</span>
                                    }
                                    else
                                    {
                                    <span class="label label-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "EditDoctor", "Doctor", new { doctorId = item.doctorId }, new { @class = "btn btn-warning" })
                                    @if (item.isActive == true)
                                    {
                                        @Html.ActionLink("Pasif Et", "DoctorStatus", "Doctor", new { doctorId = item.doctorId }, new { @class = "btn btn-danger" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Aktif Et", "DoctorStatus", "Doctor", new { doctorId = item.doctorId }, new { @class = "btn btn-success" })
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>