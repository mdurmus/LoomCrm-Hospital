@{ViewBag.Title = "Personel İzin";}
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("DoctorTakeOff", "Doctor", FormMethod.Post, new { @novalidate= "novalidate" }))
        {
            @Html.AntiForgeryToken()
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Personel Seçimi</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Personel</label>
                        @Html.DropDownList("doctorId", null, "Personel Seçiniz", new { @class = "form-control", tabindex = "1", @style = "width:100%;", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label clas="control-label">Başlangıç Tarihi</label>
                        <input type="datetime-local" data-dtpf="true" name="start" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Bitiş Tarihi</label>
                        <input type="datetime-local" data-dtpf="true" name="finish" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-block" value="Kontrol Et" />
                    </div>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="box-footer">
                        <p>@ViewBag.Message</p>
                    </div>
                }
                <!-- /.box-body -->
            </div>
        }
    </div>
</div>