@model LoomCrm_Hospital.Models.Personal
@{ViewBag.Title = "Yeni Personel Ekle";}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Yeni Personel Ekle</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("CreatePersonal", "Personal", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label">Adı</label>
                            <input type="text" name="name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Soyadı</label>
                            <input type="text" name="surName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">GSM Numarası</label>
                            <input type="tel" class="form-control" name="gsmNumber" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">
                                Şifresi
                            </label>
                            <input type="text" class="form-control" name="password" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email Adresi</label>
                            <input type="email" class="form-control" name="EmailAddress" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Profil Fotoğrafı</label>
                            <input type="file" name="photoFile" accept="image/*" class="form-control" />
                        </div>
                        <div class="box-footer">
                            <input type="submit" class="btn btn-info btn-block" value="Kaydet" />
                        </div>
                    }
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>