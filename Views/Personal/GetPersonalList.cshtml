@model IEnumerable<LoomCrm_Hospital.Models.Personal>
@{
    ViewBag.Title = "Personel Listesi";
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Personel Listesi</h3>

                    <div class="box-tools">
                        @Html.ActionLink("Yeni Personel", "CreatePersonal", "Personal", null, new { @class = "btn btn-info pull-right" })
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Gsm</th>
                                <th>E-Mail</th>
                                <th>İşlemler</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.surName</td>
                                    <td>@item.gsmNumber</td>
                                    <td>@item.EmailAddress</td>
                                    <td>
                                        @Html.ActionLink("Düzenle", "EditPersonal", "Personal", new { personalId = item.personalId }, new { @class = "btn btn-warning" })
                                        @if (item.isActive == true)
                                        {
                                            @Html.ActionLink("Pasif Et", "PersonalStatus", "Personal", new { personalId = item.personalId }, new { @class = "btn btn-danger" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Aktif Et", "PersonalStatus", "Personal", new { personalId = item.personalId }, new { @class = "btn btn-success" })
                                        }
                                    </td>
                                </tr>
                            }
                          
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
}
else
{
    <p>Kayıtlı Personel Yok</p>
}